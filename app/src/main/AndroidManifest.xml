<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bt_password">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ForgetPasswordActivity" android:exported="false" />
        <activity android:name=".VerifyCodeActivity" android:exported="false" />
        <activity android:name=".ResetPasswordActivity" android:exported="false" />
        <activity android:name=".ConfirmActivity" android:exported="false" />
    </application>

</manifest>
